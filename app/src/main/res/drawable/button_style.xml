<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="ring" android:thickness="3dp" android:useLevel="false">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <solid android:color="@color/orange" />
        </shape>
    </item>
</selector><!--<shape android:shape="ring" android:thickness="1px" android:useLevel="false">--><!--<padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />--><!--<solid android:color="@color/orange" />--><!--</shape>-->