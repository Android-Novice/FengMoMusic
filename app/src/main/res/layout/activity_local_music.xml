<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_local_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.activity.LocalMusicActivity">

    <include layout="@layout/top_actionbar" />

    <include layout="@layout/local_top_category_layout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.yuqf.fengmomusic.ui.widget.MiniMusicPlayerView
        android:id="@+id/media_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
