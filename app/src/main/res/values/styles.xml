<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">48dp</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_fade_out</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_in</item>
        <!--<item name="android:windowHideAnimation">@anim/popup_fade_out</item>-->
        <!--<item name="android:windowShowAnimation">@anim/popup_fade_in</item>-->
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />
</resources>
