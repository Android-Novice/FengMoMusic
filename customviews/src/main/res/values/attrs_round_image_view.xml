<resources>
    <declare-styleable name="RoundImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="back_color" format="color" />
        <attr name="shadow_width" format="dimension" />
        <attr name="shadow_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="bar_width" format="dimension" />
        <attr name="bar_color" format="color" />
        <attr name="bar_alpha" format="integer" />
        <attr name="show_background_arc" format="boolean" />
        <attr name="arc_stretch_width" format="dimension" />
        <attr name="arc_background_color" format="color" />
        <attr name="io_circle_position" format="enum">
            <enum name="outer" value="-1" />
            <enum name="inner" value="-2" />
            <enum name="center" value="-3" />
        </attr>
        <attr name="io_circle_width" format="dimension" />
        <attr name="io_circle_color" format="color" />
        <attr name="progress" format="integer" />
    </declare-styleable>

    <declare-styleable name="ReflectionImageView">
        <attr name="draw_src" format="boolean" />
        <attr name="reflection_gap" format="dimension" />
        <attr name="reflection_gap_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ScalableImageButton">
        <attr name="scale_xy" format="float" />
    </declare-styleable>

    <declare-styleable name="LyricsView">
        <attr name="playing_color" format="color" />
        <attr name="playing_size" format="dimension" />
        <attr name="normal_color" format="color" />
        <attr name="normal_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="indicator_radius" format="dimension" />
        <attr name="indicator_container_padding_left" format="dimension" />
        <attr name="indicator_container_padding_right" format="dimension" />
        <attr name="indicator_container_padding_top" format="dimension" />
        <attr name="indicator_container_padding_bottom" format="dimension" />
        <attr name="indicator_item_text_size" format="dimension" />
        <attr name="auto_play_delay_seconds" format="integer" />
    </declare-styleable>
</resources>


